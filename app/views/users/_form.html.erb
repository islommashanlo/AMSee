<% if flash[:errors] %>
    <div class="errors">
        <h3>You have encountered the following errors:</h3>
        <ul>
            <% flash[:errors].each do |msg|%>
                <li><%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="profile-card upload">
<%= form_for @user do |f| %>
    <div class="username">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <div class="name">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name" %>
    </div>
    <div class="password">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <div class="password_confirmation">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
    </div>
    <div class="location">
        <%= f.label :location %>
        <%= f.text_field :location, placeholder: "Location" %>
    </div>
    <div class="age">
        <%= f.label :age %>
        <%= f.number_field :age, placeholder: "Age" %>
    </div>
    <div class="profile_pic">
        <%= f.label :profile_pic %>
        <%= f.file_field :profile_pic, placeholder: "Profile Pic" %>
    </div>
    <div class="bio">
        <%= f.label :bio %>
        <%= f.text_area :bio, placeholder: "Bio" %>
    </div>
    <div class="check_box"> 
        <%= f.collection_check_boxes :streaming_services, StreamingService.all, :id, :name%>
    </div>
    <%= f.submit class: "submit" %>
<% end %> 
</div>