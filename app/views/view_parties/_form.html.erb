<% if flash[:errors] %>
    <div class="errors">
        <h3>You have encountered the following errors:</h3>
        <ul>
            <% flash[:errors].each do |msg|%>
                <li><%= msg.join(" ").capitalize %> </li>
            <% end %>
        </ul>
    </div>
<% end %>
    
    <%= form_for(@view_party) do |f| %>
   <div class="info">
    <%=f.label :name%>
    <%=f.text_field :name%>
    <%=f.label :date%>
    <%= datepicker_input f, :date%>
    <%=f.label :streaming_location%>
    <%=f.collection_select :streaming_location, Movie.find(flash[:movie_id]).streaming_services, :id, :name %>
    <%=f.hidden_field :movie_id, value: flash[:movie_id] %>
    <div class="info">
    <%=f.submit%>
    <% end %>
